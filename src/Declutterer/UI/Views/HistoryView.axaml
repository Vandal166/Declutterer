<UserControl
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="600"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="Declutterer.UI.Views.HistoryView"
    x:DataType="viewModels:HistoryWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Declutterer.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*">
        <!--  Header  -->
        <Border
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="20">
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                <StackPanel
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Vertical"
                    Spacing="5">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="Deletion History" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        IsVisible="{Binding HasEntries}"
                        Text="{Binding TotalEntryCount, StringFormat='Total deleted items: {0}'}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="10">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        IsVisible="{Binding HasEntries}"
                        Text="{Binding TotalDeletedSizeFormatted, StringFormat='Total size: {0}'}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button
                        Background="Transparent"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Command="{Binding ClearHistoryCommand}"
                        Content="Clear History"
                        Foreground="#DC143C"
                        IsEnabled="{Binding HasEntries}"
                        Margin="0,0,10,0"
                        Padding="15,10" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Content Area  -->
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <!--  Empty State  -->
            <Border
                Background="#FAFAFA"
                IsVisible="{Binding !HasEntries}"
                Padding="40">
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="20"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="32"
                        HorizontalAlignment="Center"
                        Text="📋" />
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        HorizontalAlignment="Center"
                        Text="No Deletion History" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        HorizontalAlignment="Center"
                        Text="Items you delete will appear here"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!--  Loading State  -->
            <StackPanel
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Orientation="Vertical"
                Spacing="10"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="12"
                    Foreground="#666666"
                    HorizontalAlignment="Center"
                    Text="Loading history..." />
            </StackPanel>

            <!--  History List  -->
            <ScrollViewer
                HorizontalAlignment="Stretch"
                IsVisible="{Binding HasEntries}"
                VerticalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl HorizontalAlignment="Stretch" ItemsSource="{Binding GroupedEntries}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel HorizontalAlignment="Stretch" Spacing="15" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:HistoryEntryGroupViewModel">
                            <Border
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                HorizontalAlignment="Stretch"
                                Margin="20,10"
                                Padding="15">
                                <Grid RowDefinitions="Auto,*">
                                    <!--  Group Header  -->
                                    <Border
                                        Background="#F9F9F9"
                                        BorderBrush="#E5E5E5"
                                        BorderThickness="0,0,0,1"
                                        Grid.Row="0"
                                        Margin="-15,-15,0,15"
                                        Padding="15">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                Spacing="10">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="#333333"
                                                    Text="{Binding GroupDateFormatted}"
                                                    VerticalAlignment="Center" />
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="15">
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock
                                                        FontSize="13"
                                                        Foreground="#666666"
                                                        Text="{Binding GroupEntryCount, StringFormat='Items: {0}'}"
                                                        VerticalAlignment="Center" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock
                                                        FontSize="13"
                                                        Foreground="#666666"
                                                        Text="Size:"
                                                        VerticalAlignment="Center" />
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="Bold"
                                                        Foreground="{Binding GroupTotalSizeBytes, Converter={StaticResource SizeToBrushConverter}}"
                                                        Text="{Binding GroupSizeFormatted}"
                                                        VerticalAlignment="Center" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  Group Entries  -->
                                    <ItemsControl
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch"
                                        ItemsSource="{Binding Entries}"
                                        Margin="0,15,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel HorizontalAlignment="Stretch" Spacing="10" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="viewModels:DeletionHistoryEntryViewModel">
                                                <Border
                                                    Background="#FAFAFA"
                                                    BorderBrush="#F0F0F0"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="12">
                                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto">
                                                        <!--  Item Type Icon  -->
                                                        <Path
                                                            Data="{Binding ItemTypeIconGeometry}"
                                                            Fill="#666666"
                                                            Grid.Column="0"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Height="28"
                                                            Margin="0,0,10,0"
                                                            Stretch="Uniform"
                                                            VerticalAlignment="Center"
                                                            Width="28" />

                                                        <!--  Item Name and Path  -->
                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Margin="0,0,10,0"
                                                            Orientation="Vertical"
                                                            Spacing="2"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontWeight="SemiBold"
                                                                Foreground="#333333"
                                                                Text="{Binding Entry.Name}"
                                                                TextTrimming="CharacterEllipsis" />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#999999"
                                                                Text="{Binding DisplayPath}"
                                                                TextTrimming="CharacterEllipsis" />
                                                        </StackPanel>

                                                        <!--  Size and Time  -->
                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Grid.Row="0"
                                                            Margin="0,0,15,0"
                                                            Orientation="Vertical"
                                                            Spacing="2"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="14"
                                                                Foreground="{Binding Entry.SizeBytes, Converter={StaticResource SizeToBrushConverter}}"
                                                                Text="{Binding SizeFormatted}"
                                                                TextAlignment="Right" />
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="#999999"
                                                                Text="{Binding DeletionTimeFormatted}"
                                                                TextAlignment="Right" />
                                                        </StackPanel>

                                                        <!--  Deletion Type Badge  -->
                                                        <Border
                                                            Background="{Binding TypeColor}"
                                                            BorderThickness="0"
                                                            CornerRadius="4"
                                                            Grid.Column="3"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Padding="6,4"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="White"
                                                                Text="{Binding TypeBadge}"
                                                                TextAlignment="Center" />
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
