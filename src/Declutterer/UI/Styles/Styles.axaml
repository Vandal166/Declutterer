<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!--  Add Controls for Previewer Here  -->
        </Border>
    </Design.PreviewWith>

    <!--  Button Cursor Styles  -->
    <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!--  RadioButton - Remove Focus Ring and Customize  -->
    <Style Selector="RadioButton">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="Transparent"
                    Cursor="Hand"
                    Padding="{TemplateBinding Padding}">
                    <Grid Background="Transparent" ColumnDefinitions="Auto,*">
                        <Border
                            Background="White"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Grid.Column="0"
                            Height="20"
                            VerticalAlignment="Center"
                            Width="20"
                            x:Name="border">
                            <Ellipse
                                Fill="#1E40AF"
                                Height="12"
                                HorizontalAlignment="Center"
                                IsVisible="False"
                                VerticalAlignment="Center"
                                Width="12"
                                x:Name="check" />
                        </Border>
                        <ContentPresenter
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="RadioButton:checked /template/ Ellipse#check">
        <Setter Property="IsVisible" Value="True" />
    </Style>

    <Style Selector="RadioButton:pointerover /template/ Border#border">
        <Setter Property="Background" Value="#E8F0FF" />
        <Setter Property="BorderBrush" Value="#4A90E2" />
    </Style>

    <Style Selector="RadioButton:pointerover /template/ Border">
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="HeaderedContentControl.indented">
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <!--  Header and Top Border  -->
                    <Grid
                        ColumnDefinitions="Auto,Auto,*"
                        DockPanel.Dock="Top"
                        RowDefinitions="Auto">
                        <!--  Top-left border segment  -->
                        <Border
                            BorderBrush="#666666"
                            BorderThickness="1,1,0,0"
                            CornerRadius="6,0,0,0"
                            Grid.Column="0"
                            Margin="0,8,0,0"
                            Width="12" />

                        <!--  Header Text  -->
                        <Border
                            Background="{DynamicResource ThemeBackgroundBrush}"
                            Grid.Column="1"
                            Padding="4,0">
                            <TextBlock FontWeight="Bold" Text="{TemplateBinding Header}" />
                        </Border>

                        <!--  Top-right border segment  -->
                        <Border
                            BorderBrush="#666666"
                            BorderThickness="0,1,1,0"
                            CornerRadius="0,6,0,0"
                            Grid.Column="2"
                            Margin="0,8,0,0" />
                    </Grid>

                    <!--  Main Border with Content  -->
                    <Border
                        BorderBrush="#666666"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,6,6"
                        Padding="12,12,12,12">
                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </Border>
                </DockPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
