<Window
    Height="850"
    Title="Cleanup Review"
    Width="900"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Declutterer.Views.CleanupWindow"
    x:DataType="vm:CleanupWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Declutterer.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:CleanupWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto,Auto">
        <!--  Summary Section - The Big Win  -->
        <Border
            Background="#F0F8FF"
            BorderBrush="#4A90E2"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Row="0"
            Margin="10">
            <StackPanel
                Margin="15"
                Orientation="Vertical"
                Spacing="5">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#1E40AF"
                    Text="Storage Cleanup Summary" />
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#2D5A2D"
                    Text="{Binding TotalSizeFormatted, StringFormat='You are about to free up {0}!'}" />
                <TextBlock
                    FontSize="12"
                    Foreground="#555555"
                    Text="{Binding ItemsToDelete.Count, StringFormat='This will delete {0} item(s) alongside their contents.'}" />
            </StackPanel>
        </Border>

        <!--  Header with info and Deselect button  -->
        <Grid
            ColumnDefinitions="*,Auto"
            Grid.Row="1"
            Margin="10">
            <TextBlock
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="0"
                Text="Items grouped by cleanup reason:" />
        </Grid>

        <!--  Grouped List of items (Scrollable)  -->
        <Grid Grid.Row="2">
            <ScrollViewer
                IsVisible="{Binding ItemsToDelete.Count, Converter={StaticResource GreaterThanZeroToBooleanConverter}}"
                Margin="10"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Spacing="10">
                    <!--  Large Directories Group  -->
                    <Border
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4"
                        IsVisible="{Binding LargeDirectories.Count, Converter={StaticResource GreaterThanZeroToBooleanConverter}}"
                        Padding="10">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <!--  Group Header  -->
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="#1E3A8A"
                                Text="{Binding LargeDirectories.Count, StringFormat='{}{0} Large Directories (>100MB)'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#666666"
                                Text="{Binding LargeDirectoriesSize, StringFormat='Total: {0}'}" />

                            <!--  Items in group  -->
                            <ListBox
                                ItemsSource="{Binding LargeDirectories}"
                                SelectedItem="{Binding SelectedItem}"
                                x:Name="LargeDirectoriesListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0" Margin="5,5,0,5">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!--  Icon based on file/folder type  -->
                                                <Image
                                                    Grid.Column="0"
                                                    Height="28"
                                                    IsHitTestVisible="False"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Icon}" />
                                                <!--  Item details  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    IsHitTestVisible="False"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding FullPath, Converter={StaticResource PathMiddleEllipsisConverter}, ConverterParameter=140}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Gray"
                                                        Text="{Binding SizeFormatted}" />
                                                </StackPanel>
                                                <!--  Remove button  -->
                                                <Button
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[Window].DataContext.RemoveFromCleanupCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Content="-"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Foreground="#DC143C"
                                                    Grid.Column="2"
                                                    Margin="10,0,0,0"
                                                    ToolTip.Tip="Remove from cleanup" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!--  Large Files Group  -->
                    <Border
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4"
                        IsVisible="{Binding LargeFiles.Count, Converter={StaticResource GreaterThanZeroToBooleanConverter}}"
                        Padding="10">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <!--  Group Header  -->
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="#1E3A8A"
                                Text="{Binding LargeFiles.Count, StringFormat='{}{0} Large Files (>100MB)'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#666666"
                                Text="{Binding LargeFilesSize, StringFormat='Total: {0}'}" />

                            <!--  Items in group  -->
                            <ListBox
                                ItemsSource="{Binding LargeFiles}"
                                SelectedItem="{Binding SelectedItem}"
                                x:Name="LargeFilesListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0" Margin="5,5,0,5">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!--  Icon based on file/folder type  -->
                                                <Image
                                                    Grid.Column="0"
                                                    Height="28"
                                                    IsHitTestVisible="False"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Icon}" />
                                                <!--  Item details  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    IsHitTestVisible="False"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding FullPath, Converter={StaticResource PathMiddleEllipsisConverter}, ConverterParameter=140}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Gray"
                                                        Text="{Binding SizeFormatted}" />
                                                </StackPanel>
                                                <!--  Remove button  -->
                                                <Button
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[Window].DataContext.RemoveFromCleanupCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Content="-"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Foreground="#DC143C"
                                                    Grid.Column="2"
                                                    Margin="10,0,0,0"
                                                    ToolTip.Tip="Remove from cleanup" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!--  Old Files Group  -->
                    <Border
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4"
                        IsVisible="{Binding OldFiles.Count, Converter={StaticResource GreaterThanZeroToBooleanConverter}}"
                        Padding="10">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <!--  Group Header  -->
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="#1E3A8A"
                                Text="{Binding OldFiles.Count, StringFormat='{}{0} Old Files (Last Modified > 2 years ago)'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#666666"
                                Text="{Binding OldFilesSize, StringFormat='Total: {0}'}" />

                            <!--  Items in group  -->
                            <ListBox
                                ItemsSource="{Binding OldFiles}"
                                SelectedItem="{Binding SelectedItem}"
                                x:Name="OldFilesListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0" Margin="5,5,0,5">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!--  Icon based on file/folder type  -->
                                                <Image
                                                    Grid.Column="0"
                                                    Height="28"
                                                    IsHitTestVisible="False"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Icon}" />
                                                <!--  Item details  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    IsHitTestVisible="False"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding FullPath, Converter={StaticResource PathMiddleEllipsisConverter}, ConverterParameter=140}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Gray"
                                                        Text="{Binding SizeFormatted}" />
                                                </StackPanel>
                                                <!--  Remove button  -->
                                                <Button
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[Window].DataContext.RemoveFromCleanupCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Content="-"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Foreground="#DC143C"
                                                    Grid.Column="2"
                                                    Margin="10,0,0,0"
                                                    ToolTip.Tip="Remove from cleanup" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                    <!--  Other Items Group  -->
                    <Border
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="4"
                        IsVisible="{Binding OtherItems.Count, Converter={StaticResource GreaterThanZeroToBooleanConverter}}"
                        Padding="10">
                        <StackPanel Orientation="Vertical" Spacing="8">
                            <!--  Group Header  -->
                            <TextBlock
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="#1E3A8A"
                                Text="{Binding OtherItems.Count, StringFormat='{}{0} Other Items'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#666666"
                                Text="{Binding OtherItemsSize, StringFormat='Total: {0}'}" />

                            <!--  Items in group  -->
                            <ListBox
                                ItemsSource="{Binding OtherItems}"
                                SelectedItem="{Binding SelectedItem}"
                                x:Name="OtherItemsListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0" Margin="5,5,0,5">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!--  Icon based on file/folder type  -->
                                                <Image
                                                    Grid.Column="0"
                                                    Height="28"
                                                    IsHitTestVisible="False"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Icon}" />
                                                <!--  Item details  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    IsHitTestVisible="False"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding FullPath, Converter={StaticResource PathMiddleEllipsisConverter}, ConverterParameter=140}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Gray"
                                                        Text="{Binding SizeFormatted}" />
                                                </StackPanel>
                                                <!--  Remove button  -->
                                                <Button
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[Window].DataContext.RemoveFromCleanupCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Content="-"
                                                    FontSize="22"
                                                    FontWeight="Bold"
                                                    Foreground="#DC143C"
                                                    Grid.Column="2"
                                                    Margin="10,0,0,0"
                                                    ToolTip.Tip="Remove from cleanup" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!--  No Items to Delete Message  -->
            <StackPanel
                HorizontalAlignment="Center"
                IsVisible="{Binding ItemsToDelete.Count, Converter={StaticResource EqualToZeroToBooleanConverter}}"
                Orientation="Vertical"
                Spacing="16"
                VerticalAlignment="Center">

                <!--  Icon  -->
                <Path
                    Data="{StaticResource folder_regular}"
                    Fill="#FFA500"
                    Stretch="Uniform"
                    VerticalAlignment="Center"
                    Width="64" />

                <!--  Main Heading  -->
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#333333"
                    HorizontalAlignment="Center"
                    Text="No items to delete" />

                <!--  Subtitle  -->
                <TextBlock
                    FontSize="13"
                    Foreground="#666666"
                    HorizontalAlignment="Center"
                    Text="All selected items have been removed from the cleanup list."
                    TextAlignment="Center" />
            </StackPanel>
        </Grid>

        <!--  Safety Toggle and Footer with buttons  -->
        <Border
            Background="#FFF9E6"
            BorderBrush="#FFD700"
            BorderThickness="1"
            Grid.Row="3"
            Margin="10,5,10,10"
            Padding="20,10">
            <StackPanel Orientation="Vertical" Spacing="8">
                <TextBlock
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="#555555"
                    Text="Deletion method:" />

                <!--  Safe option  -->
                <Border
                    Background="White"
                    BorderBrush="#2D5A2D"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="5">
                    <RadioButton
                        Content="Send to Recycle Bin (safer)"
                        FontWeight="Bold"
                        Foreground="#2D5A2D"
                        GroupName="DeleteMethod"
                        IsChecked="{Binding SendToRecycleBin}" />
                </Border>

                <!--  Danger option with warning  -->
                <Border
                    Background="White"
                    BorderBrush="#DC143C"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="5">
                    <RadioButton
                        Content="Permanent Delete (cannot be undone)"
                        FontWeight="Bold"
                        Foreground="#B22222"
                        GroupName="DeleteMethod"
                        IsChecked="{Binding !SendToRecycleBin}" />
                </Border>
            </StackPanel>
        </Border>

        <!--  Progress bar (shown during deletion)  -->
        <Border
            Background="#F0F0F0"
            BorderBrush="#CCCCCC"
            BorderThickness="0,1,0,0"
            Grid.Row="4"
            IsVisible="{Binding IsDeletionInProgress}"
            Margin="0,0,0,0"
            Padding="20,10">
            <StackPanel Orientation="Vertical" Spacing="5">
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="10"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="Deleting files..." />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        Text="{Binding DeletionProgress, StringFormat={}{0:F1}%}" />
                </StackPanel>
                <ProgressBar
                    Background="#E0E0E0"
                    Foreground="#4A90E2"
                    Height="20"
                    Maximum="100"
                    Value="{Binding DeletionProgress}" />
                <TextBlock
                    FontSize="11"
                    Foreground="#666666"
                    Text="{Binding DeletionStatus}" />
            </StackPanel>
        </Border>

        <!--  Action buttons  -->
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            Grid.Row="5"
            Margin="20,10">
            <Button
                Content="Cancel"
                Grid.Column="1"
                HorizontalAlignment="Right"
                IsEnabled="{Binding !IsDeletionInProgress}"
                Margin="0,0,10,0"
                Padding="20,10" />
            <Button
                Background="#DC143C"
                Content="Delete..."
                Foreground="White"
                Grid.Column="2"
                HorizontalAlignment="Right"
                IsEnabled="{Binding CanDelete}"
                Padding="20,10" />
        </Grid>
    </Grid>
</Window>
