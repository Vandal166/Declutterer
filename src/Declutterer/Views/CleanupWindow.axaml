<Window
    Height="600"
    Title="Cleanup Review"
    Width="800"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Declutterer.Views.CleanupWindow"
    x:DataType="vm:CleanupWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Declutterer.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:CleanupWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Header with Undo button  -->
        <Grid
            ColumnDefinitions="*,Auto"
            Grid.Row="0"
            Margin="10">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Grid.Column="0"
                Text="Entries to be deleted:" />
            <Button
                Content="Undo"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="10,0,0,0"
                Padding="20,10" />
        </Grid>

        <!--  List of items  -->
        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding ItemsToDelete}"
            Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*" Margin="5">
                        <!--  Icon based on file/folder type  -->
                        <Image
                            Grid.Column="0"
                            Height="32"
                            Margin="0,0,10,0"
                            Source="{Binding Icon}" />
                        <!--  Item details  -->
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="Gray"
                                Text="{Binding FullPath}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="Gray"
                                Text="{Binding SizeFormatted}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Footer with buttons  -->
        <Grid
            ColumnDefinitions="Auto,*"
            Grid.Row="2"
            Margin="10">
            <Button
                Content="Cancel"
                Grid.Column="0"
                HorizontalAlignment="Left"
                Padding="20,10" />
            <Button
                Background="Red"
                Content="Delete..."
                Foreground="White"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Padding="20,10" />
        </Grid>
    </Grid>
</Window>
