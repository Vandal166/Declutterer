<Window
    Height="800"
    Title="Cleanup Review"
    Width="900"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Declutterer.Views.CleanupWindow"
    x:DataType="vm:CleanupWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Declutterer.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:CleanupWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto,Auto">
        <!--  Summary Section - The Big Win  -->
        <Border
            Background="#F0F8FF"
            BorderBrush="#4A90E2"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Row="0"
            Margin="10">
            <StackPanel
                Margin="15"
                Orientation="Vertical"
                Spacing="5">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#1E40AF"
                    Text="Storage Cleanup Summary" />
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#2D5A2D"
                    Text="{Binding TotalSizeFormatted, StringFormat='You are about to free up {0}!'}" />
                <TextBlock
                    FontSize="12"
                    Foreground="#555555"
                    Text="{Binding ItemsToDelete.Count, StringFormat='This will delete {0} item(s) alongside their contents.'}" />
            </StackPanel>
        </Border>

        <!--  Header with info and Deselect button  -->
        <Grid
            ColumnDefinitions="*,Auto"
            Grid.Row="1"
            Margin="10">
            <TextBlock
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="0"
                Text="Items grouped by cleanup reason:" />
        </Grid>

        <!--  Grouped List of items (Scrollable)  -->
        <ScrollViewer
            Grid.Row="2"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GroupedItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Background="#F5F5F5"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,10"
                            Padding="10">
                            <StackPanel Orientation="Vertical" Spacing="8">
                                <!--  Group Header  -->
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#1E3A8A"
                                    Text="{Binding GroupName}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666666"
                                    Text="{Binding GroupSizeFormatted, StringFormat='Total: {0}'}" />

                                <!--  Items in group  -->
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*" Margin="5,5,0,5">
                                                <!--  Icon based on file/folder type  -->
                                                <Image
                                                    Grid.Column="0"
                                                    Height="28"
                                                    Margin="0,0,10,0"
                                                    Source="{Binding Icon}" />
                                                <!--  Item details  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    Orientation="Vertical"
                                                    VerticalAlignment="Center">
                                                    <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="Gray"
                                                        Text="{Binding FullPath}" />
                                                    <TextBlock
                                                        FontSize="10"
                                                        Foreground="Gray"
                                                        Text="{Binding SizeFormatted}" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  Safety Toggle and Footer with buttons  -->
        <Border
            Background="#FFF9E6"
            BorderBrush="#FFD700"
            BorderThickness="0,1,0,0"
            Grid.Row="3"
            Margin="10,5,0,10"
            Padding="20,10">
            <StackPanel Orientation="Vertical" Spacing="8">
                <TextBlock
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="#555555"
                    Text="Deletion method:" />

                <!--  Safe option  -->
                <Border
                    Background="White"
                    BorderBrush="#2D5A2D"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="10">
                    <RadioButton
                        Content="📁 Send to Recycle Bin (safer)"
                        Foreground="#2D5A2D"
                        GroupName="DeleteMethod"
                        IsChecked="{Binding SendToRecycleBin}" />
                </Border>

                <!--  Danger option with warning  -->
                <Border
                    Background="White"
                    BorderBrush="#DC143C"
                    BorderThickness="3"
                    CornerRadius="4"
                    Padding="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <RadioButton
                            Content="🔴 Permanent Delete (cannot be undone)"
                            Foreground="#B22222"
                            GroupName="DeleteMethod"
                            IsChecked="{Binding !SendToRecycleBin}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!--  Progress bar (shown during deletion)  -->
        <Border
            Background="#F0F0F0"
            BorderBrush="#CCCCCC"
            BorderThickness="0,1,0,0"
            Grid.Row="4"
            IsVisible="{Binding IsDeletionInProgress}"
            Margin="0,0,0,0"
            Padding="20,10">
            <StackPanel Orientation="Vertical" Spacing="5">
                <StackPanel
                    Orientation="Horizontal"
                    Spacing="10"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="Deleting files..." />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        Text="{Binding DeletionProgress, StringFormat={}{0:F1}%}" />
                </StackPanel>
                <ProgressBar
                    Background="#E0E0E0"
                    Foreground="#4A90E2"
                    Height="20"
                    Maximum="100"
                    Value="{Binding DeletionProgress}" />
                <TextBlock
                    FontSize="11"
                    Foreground="#666666"
                    Text="{Binding DeletionStatus}" />
            </StackPanel>
        </Border>

        <!--  Action buttons  -->
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            Grid.Row="5"
            Margin="20,10">
            <Button
                Content="Cancel"
                Grid.Column="1"
                HorizontalAlignment="Right"
                IsEnabled="{Binding !IsDeletionInProgress}"
                Margin="0,0,10,0"
                Padding="20,10" />
            <Button
                Background="#DC143C"
                Content="Delete..."
                Foreground="White"
                Grid.Column="2"
                HorizontalAlignment="Right"
                IsEnabled="{Binding !IsDeletionInProgress}"
                Padding="20,10" />
        </Grid>
    </Grid>
</Window>
