<Window
    Height="600"
    Title="Cleanup Review"
    Width="800"
    WindowStartupLocation="CenterScreen"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Declutterer.Views.CleanupWindow"
    x:DataType="vm:CleanupWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Declutterer.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:CleanupWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
        <!--  Summary Section - The Big Win  -->
        <Border
            Background="#F0F8FF"
            BorderBrush="#4A90E2"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Row="0"
            Margin="10">
            <StackPanel
                Margin="15"
                Orientation="Vertical"
                Spacing="5">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="#1E40AF"
                    Text="Storage Cleanup Summary" />
                <TextBlock
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#2D5A2D"
                    Text="{Binding TotalSizeFormatted, StringFormat='You are about to free up {0}!'}" />
                <TextBlock
                    FontSize="12"
                    Foreground="#555555"
                    Text="{Binding ItemsToDelete.Count, StringFormat='This will delete {0} item(s)'}" />
            </StackPanel>
        </Border>

        <!--  Header with info and Deselect button  -->
        <Grid
            ColumnDefinitions="*,Auto"
            Grid.Row="1"
            Margin="10">
            <TextBlock
                FontSize="14"
                FontWeight="Bold"
                Grid.Column="0"
                Text="Items to be deleted:" />
            <Button
                Content="Deselect All"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="10,0,0,0"
                Padding="15,8" />
        </Grid>

        <!--  List of items  -->
        <ListBox
            Grid.Row="2"
            ItemsSource="{Binding ItemsToDelete}"
            Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*" Margin="5">
                        <!--  Icon based on file/folder type  -->
                        <Image
                            Grid.Column="0"
                            Height="32"
                            Margin="0,0,10,0"
                            Source="{Binding Icon}" />
                        <!--  Item details  -->
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="Gray"
                                Text="{Binding FullPath}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="Gray"
                                Text="{Binding SizeFormatted}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Safety Toggle and Footer with buttons  -->
        <Border
            Background="#FFF9E6"
            BorderBrush="#FFD700"
            BorderThickness="0,1,0,0"
            Grid.Row="3"
            Margin="10,5,10,0"
            Padding="10">
            <StackPanel
                Orientation="Horizontal"
                Spacing="15"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="12"
                    Foreground="#555555"
                    Text="Deletion method:"
                    VerticalAlignment="Center" />
                <RadioButton
                    Content="📁 Send to Recycle Bin (safer)"
                    Foreground="#2D5A2D"
                    GroupName="DeleteMethod"
                    IsChecked="{Binding SendToRecycleBin}" />
                <RadioButton
                    Content="🔴 Permanent Delete"
                    Foreground="#B22222"
                    GroupName="DeleteMethod"
                    IsChecked="{Binding !SendToRecycleBin}" />
            </StackPanel>
        </Border>

        <!--  Action buttons  -->
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            Grid.Row="4"
            Margin="10">
            <Button
                Content="Cancel"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Padding="20,10" />
            <Button
                Background="#DC143C"
                Content="Delete..."
                Foreground="White"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Padding="20,10" />
        </Grid>
    </Grid>
</Window>
