<UserControl
    d:DesignHeight="600"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="Declutterer.Views.HistoryView"
    x:DataType="vm:HistoryWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Declutterer.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Header  -->
        <Border
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="20">
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                <StackPanel
                    Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Vertical"
                    Spacing="5">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        Text="Deletion History" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        IsVisible="{Binding HasEntries}"
                        Text="{Binding TotalEntryCount, StringFormat='Total deleted items: {0}'}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Spacing="10">
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        IsVisible="{Binding HasEntries}"
                        Text="{Binding TotalDeletedSizeFormatted, StringFormat='Total size: {0}'}" />
                </StackPanel>

                <TextBlock
                    FontSize="11"
                    Foreground="#999999"
                    Grid.Column="0"
                    Grid.Row="1"
                    IsVisible="{Binding HasEntries}"
                    Margin="0,5,0,0"
                    Text="{Binding GroupedEntries.Count, StringFormat='Grouped by date: {0} groups'}" />
            </Grid>
        </Border>

        <!--  Content Area  -->
        <Grid Grid.Row="1">
            <!--  Empty State  -->
            <Border
                Background="#FAFAFA"
                IsVisible="{Binding !HasEntries}"
                Padding="40">
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="20"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="32"
                        HorizontalAlignment="Center"
                        Text="📋" />
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#333333"
                        HorizontalAlignment="Center"
                        Text="No Deletion History" />
                    <TextBlock
                        FontSize="12"
                        Foreground="#666666"
                        HorizontalAlignment="Center"
                        Text="Items you delete will appear here"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!--  Loading State  -->
            <StackPanel
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Orientation="Vertical"
                Spacing="10"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="12"
                    Foreground="#666666"
                    HorizontalAlignment="Center"
                    Text="Loading history..." />
            </StackPanel>

            <!--  History List  -->
            <ScrollViewer IsVisible="{Binding HasEntries}" Padding="20">
                <ItemsControl ItemsSource="{Binding GroupedEntries}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Spacing="15" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:HistoryEntryGroupViewModel">
                            <Border
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="15">
                                <Grid RowDefinitions="Auto,*">
                                    <!--  Group Header  -->
                                    <Border
                                        Background="#F9F9F9"
                                        BorderBrush="#E5E5E5"
                                        BorderThickness="0,0,0,1"
                                        Grid.Row="0"
                                        Margin="-15,-15,0,15"
                                        Padding="15">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                Spacing="10">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="#333333"
                                                    Text="{Binding GroupDateFormatted}"
                                                    VerticalAlignment="Center" />
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="15">
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#666666"
                                                        Text="{Binding GroupEntryCount, StringFormat='Items: {0}'}"
                                                        VerticalAlignment="Center" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="3">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#666666"
                                                        Text="Size:"
                                                        VerticalAlignment="Center" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#666666"
                                                        Text="{Binding GroupSizeFormatted}"
                                                        VerticalAlignment="Center" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!--  Group Entries  -->
                                    <ItemsControl
                                        Grid.Row="1"
                                        ItemsSource="{Binding Entries}"
                                        Margin="0,15,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Spacing="10" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:DeletionHistoryEntryViewModel">
                                                <Border
                                                    Background="#FAFAFA"
                                                    BorderBrush="#F0F0F0"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="12">
                                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto">
                                                        <!--  Item Type Icon  -->
                                                        <TextBlock
                                                            FontSize="16"
                                                            Grid.Column="0"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Margin="0,0,10,0"
                                                            Text="{Binding ItemTypeIcon}"
                                                            VerticalAlignment="Center" />

                                                        <!--  Item Name and Path  -->
                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Margin="0,0,10,0"
                                                            Orientation="Vertical"
                                                            Spacing="2"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontWeight="SemiBold"
                                                                Foreground="#333333"
                                                                Text="{Binding Entry.Name}"
                                                                TextTrimming="CharacterEllipsis" />
                                                            <TextBlock
                                                                FontSize="10"
                                                                Foreground="#999999"
                                                                Text="{Binding DisplayPath}"
                                                                TextTrimming="CharacterEllipsis" />
                                                        </StackPanel>

                                                        <!--  Size and Time  -->
                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Grid.Row="0"
                                                            Margin="0,0,15,0"
                                                            Orientation="Vertical"
                                                            Spacing="2"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Text="{Binding SizeFormatted}"
                                                                TextAlignment="Right" />
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="#999999"
                                                                Text="{Binding DeletionTimeFormatted}"
                                                                TextAlignment="Right" />
                                                        </StackPanel>

                                                        <!--  Deletion Type Badge  -->
                                                        <Border
                                                            Background="{Binding TypeColor}"
                                                            BorderThickness="0"
                                                            CornerRadius="4"
                                                            Grid.Column="3"
                                                            Grid.Row="0"
                                                            Grid.RowSpan="2"
                                                            Padding="6,4"
                                                            VerticalAlignment="Center">
                                                            <TextBlock
                                                                FontSize="9"
                                                                Foreground="White"
                                                                Text="{Binding TypeBadge}"
                                                                TextAlignment="Center" />
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!--  Footer  -->
        <Border
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="0,1,0,0"
            Grid.Row="2"
            Padding="20">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <Button
                    Background="Transparent"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Command="{Binding ClearHistoryCommand}"
                    Content="Clear History"
                    Foreground="#DC143C"
                    Grid.Column="1"
                    IsEnabled="{Binding HasEntries}"
                    Margin="0,0,10,0"
                    Padding="15,10" />
                <Button
                    Background="CornflowerBlue"
                    BorderThickness="0"
                    Command="{Binding HideHistoryCommand}"
                    Content="Back"
                    Foreground="White"
                    Grid.Column="2"
                    Name="BackButton"
                    Padding="15,10" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
